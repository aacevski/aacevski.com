---
import ProjectCard from "./project-card.astro";

const projects = [
  {
    title: "unwrapit.me",
    description:
      "A platform for unwrapping and sharing Spotify Wrapped all year round.",
    url: "https://unwrapit.vercel.app",
    tags: ["Next.js", "TypeScript", "Spotify API"],
  },
  {
    title: "bukefal-os",
    description: "A minimal Linux distribution built for developers.",
    url: "https://github.com/aacevski/bukefal-os",
    tags: ["Linux", "Shell", "C"],
  },
  {
    title: "go-tify",

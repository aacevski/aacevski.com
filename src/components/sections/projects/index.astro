---
import ProjectCard from './project-card.astro';

const projects = [
  {
    title: 'unwrapit.me',
    description: 'A platform for unwrapping and sharing Spotify Wrapped all year round.',
    url: 'https://unwrapit.me',
    tags: ['Next.js', 'TypeScript', 'Spotify API']
  },
  {
    title: 'bukefal-os',
    description: 'A minimal Linux distribution built for developers.',
    url: '#',
    tags: ['Linux', 'Shell', 'C']
  },
  {
    title: 'go-tify',
    description: 'Go library for interacting with the Spotify Web API.',
    url: '#',
    tags: ['Go', 'API']
  }
];
---
<section id="projects" class="space-y-6">
  <h2 class="text-2xl font-semibold font-mono">Featured Projects</h2>
  <div class="grid gap-4">
    {projects.map(project => (
      <ProjectCard {...project} />
    ))}
  </div>
</section>
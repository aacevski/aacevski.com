---
import Logo from './logo.astro';
import SocialIcon from './social-icon.astro';
import { navItems, socials } from '../../config/navigation';

const currentPath = Astro.url.pathname;
---

<nav class="fixed top-4 left-1/2 -translate-x-1/2 w-[calc(100%-2rem)] max-w-4xl bg-black/40 backdrop-blur-lg z-50 rounded-2xl border border-white/10 shadow-lg shadow-black/20">
  <div class="px-4 sm:px-6 py-4">
    <div class="flex items-center justify-between">
      <Logo />
      
      <!-- Desktop Navigation -->
      <div class="hidden sm:flex items-center gap-8">
        <div class="flex gap-8">
          {navItems.map(item => (
            <a 
              href={item.href} 
              class:list={[
                "font-medium transition-colors relative group",
                currentPath === item.href ? "text-blue-400" : "text-gray-300 hover:text-blue-400"
              ]}
            >
              {item.label}
              <span class="absolute inset-x-0 -bottom-1 h-px bg-blue-400 scale-x-0 group-hover:scale-x-100 transition-transform"></span>
            </a>
          ))}
        </div>
        <div class="flex items-center gap-4 pl-8 border-l border-white/10">
          {socials.map(social => (
            <SocialIcon {...social} />
          ))}
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div class="flex sm:hidden items-center">
        <a
          href="/blog"
          class:list={[
            "p-2 rounded-lg transition-colors",
            currentPath === '/blog' ? "text-blue-400 bg-blue-500/10" : "text-gray-300 hover:text-blue-400 hover:bg-white/5"
          ]}
          aria-label="Writing"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
          </svg>
        </a>
        <div class="flex items-center gap-3 ml-4 pl-4 border-l border-white/10">
          {socials.map(social => (
            <SocialIcon {...social} />
          ))}
        </div>
      </div>
    </div>
  </div>
</nav>
---
import Logo from './logo.astro';
import SocialIcon from './social-icon.astro';
import { navItems, socials } from '../../config/navigation';
import MobileMenu from './mobile-menu.astro';

const currentPath = Astro.url.pathname;
---

<nav class="fixed top-4 left-1/2 -translate-x-1/2 w-[calc(100%-2rem)] max-w-4xl bg-black/40 backdrop-blur-lg z-50 rounded-2xl border border-white/10 shadow-lg shadow-black/20">
  <div class="px-3 sm:px-6 py-4">
    <div class="flex items-center justify-between">
      <Logo />
      
      <div class="hidden sm:flex items-center gap-4 lg:gap-8">
        <div class="flex gap-4 lg:gap-8">
          {navItems.map(item => (
            <a 
              href={item.href} 
              class:list={[
                "font-medium transition-colors relative group text-sm lg:text-base whitespace-nowrap",
                currentPath === item.href ? "text-blue-400" : "text-gray-300 hover:text-blue-400"
              ]}
            >
              {item.label}
              <span class="absolute inset-x-0 -bottom-1 h-px bg-blue-400 scale-x-0 group-hover:scale-x-100 transition-transform"></span>
            </a>
          ))}
        </div>
        <div class="flex items-center gap-3 lg:gap-4 pl-4 lg:pl-8 border-l border-white/10">
          {socials.map(social => (
            <SocialIcon {...social} />
          ))}
        </div>
      </div>

      <button 
        id="mobile-menu-button"
        class="sm:hidden p-2 text-gray-400 hover:text-blue-400 transition-colors"
        aria-label="Toggle menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <MobileMenu currentPath={currentPath} />
</nav>
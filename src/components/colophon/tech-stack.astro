---
interface Technology {
  name: string;
  description: string;
  url: string;
  icon: string;
  category: "core" | "styling" | "content" | "tooling";
}

const technologies: Technology[] = [
  {
    name: "Astro",
    description: "Lightning-fast static site generator with zero-JS by default",
